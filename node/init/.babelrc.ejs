<%_ if(args.babel) { -%>
---
to: .babelrc
overwrite: true
---
{
    "presets": [
        "@babel/preset-env"
    ],
    "plugins": [
        ["@babel/plugin-proposal-decorators", { "decoratorsBeforeExport": true }],
        "@babel/plugin-proposal-do-expressions",
        ["@babel/plugin-proposal-pipeline-operator", { "proposal": "smart" }]
    ]
}
<%_ } -%>